<div class="row">
  <div class="col-md-4"></div>
   <div class="col-md-4" style="border:1px solid black; background-color:#1ab394; color:white; text-align:center">
    <h2 style="font-weight:700"><%= t('log_in') %></h2>
       <br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, :style => "color:black", :class => "form-control", autofocus: true %>
  </div>
<br>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, :style => "color:black",  :class => "form-control",  autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
        <%= f.label t('remember_me') %>
    </div>
  <% end -%>

  <div class="actions" style="color:black">
      <%= f.submit t('log_in'), :class => "form-group btn", :style => "background-color:#00796B; width:50%; color:black;" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
    </div>
     <div class="col-md-4"></div>
</div>



