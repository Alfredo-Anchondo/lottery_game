<div class="loginColumns animated fadeInDown">
<div class="row">

            <div class="col-md-6">
                <h2 style="font-weight:700; text-align:center; color:black;"> DON <span style="color:#E91F7F;">BILLETE</span> </h2>
                <h4 style="text-align:center"><img width="20%" src="/assets/DonBillete.png" ></h4>
            </div>
            <div class="col-md-6">
                <div class="ibox-content">
                    <h4 style="font-weight:700; text-align:center"><%= t('log_in') %></h4>
                   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, :style => "color:black", :class => "form-control", autofocus: true %>
  </div>
<br>
       
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, :style => "color:black",  :class => "form-control",  autocomplete: "off" %>
  </div>
       

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
        <%= f.label t('remember_me') %>
    </div>
  <% end -%>
       
       
  <div class="actions" style="color:black">
      <%= f.submit t('log_in'), :class => "form-group btn", :style => "background-color:#ab005c; width:100%; color: white;
    font-weight: 900;" %> <br>
        
      <div id="status">
</div>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
                    <p class="m-t">
                        <small>DonBillete Â© PubliWi 2016</small>
                    </p>
                </div>
            </div>
        </div>

</div>









