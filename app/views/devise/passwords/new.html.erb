<h2 style="text-align:center"><%= t('forget_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
      <h5 style="text-align:center"> <%= t('mail_instruction') %> </h5>
      <h4 style="text-align:center"> <%= f.label :email %></h4> 
      <%= f.email_field :email, autofocus: true, :class => "form-control", :style => "width:50%; margin-left:25%;" %>
  </div>

  <div class="actions">
      <h4 style="text-align:center"><%= f.submit t('send_instruction'), :class => "btn btn-primary" %></h4>
  </div>
<% end %>

