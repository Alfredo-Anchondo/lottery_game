<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6" style="border:1px solid black; background-color:#1ab394; color:white; text-align:center">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
            <h2 style="text-align:center"><%= t('sign_up') %></h2>
        <br>
        <div class="col-md-6">
               
  <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, class: "form-control", style: "color:black", autofocus: true %>
  </div>
<div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control", style: "color:black", autofocus: false %>
  </div>
<div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "form-control", style: "color:black", autofocus: false %>
  </div>

<div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, class: "form-control", style: "color:black", autofocus: false %>
    <%= f.hidden_field :balance, class: "form-control", style: "color:black", value: 0 , autofocus: false %>
  </div>




  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control",style: "color:black", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "form-control", style: "color:black", autocomplete: "off" %>
  </div>



        </div>
        <div class="col-md-6">
        <div class="field">
    <%= f.label :address_1 %><br />
    <%= f.text_field :address_1, class: "form-control", style: "color:black", autofocus: false %>
  </div>

<div class="field">
    <%= f.label :address_2 %><br />
    <%= f.text_field :address_2, class: "form-control",style: "color:black", autofocus: false %>
  </div>

<div class="field">
    <%= f.label :zip_code %><br />
    <%= f.text_field :zip_code, class: "form-control",style: "color:black", autofocus: false %>
  </div>


<div class="field">
    <%= f.label :cellphone %><br />
    <%= f.text_field :cellphone, class: "form-control",style: "color:black", autofocus: false %>
  </div>
            <div class="field">
    <%= f.label :country %><br />
    <%= f.text_field :country, class: "form-control",style: "color:black", autofocus: false %>
  </div>

<div class="field" style="display:none">
    <%= f.label :role_id %><br />
    <%= f.hidden_field :role_id, value:2, class: "form-group",style: "color:black",autofocus: false %>
  </div> 
     
        </div>
        <br><br>
         <div class="actions">
             <%= f.submit t('sign_up_now') ,class: " btn", style: "color:black; margin-top:3%; width:100%; background-color:#00796B;" %>
  </div>
        <% end %>
        <br> <br>
        
 <%= render "devise/shared/links" %>
    
    </div>
    <div class="col-md-3"></div>
</div>

