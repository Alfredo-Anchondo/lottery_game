<div class="row">
    <h4><%= t('make_account') %></h4>
    <br>
    <div class="col-md-3"></div>
    <div class="col-md-6" style="border:1px solid black; background-color:white; color:white; text-align:center">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
            <h2 style="text-align:center"><%= t('sign_up') %></h2>
        <br>
        <div class="col-md-6">
               
  <div class="field">
      <%= f.label :username, :style => 'color:#E4007D' %><br />
      <%= f.text_field :username, class: "form-control", style: "color:black", autofocus: true %>
  </div> <br>
            
<div class="field">
    <%= f.label :email, :style => 'color:#E4007D' %><br />
    <%= f.email_field :email, class: "form-control", style: "color:black", autofocus: false %>
  </div> <br>

  <div class="field">
    <%= f.label :password, :style => 'color:#E4007D' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control",style: "color:black", autocomplete: "off" %>
  </div>

        </div>
        <div class="col-md-6">
            <div class="field">
    <%= f.label :name, :style => 'color:#E4007D' %><br />
    <%= f.text_field :name, class: "form-control", style: "color:black", autofocus: false %>
  </div> <br>

<div class="field">
    <%= f.label :last_name, :style => 'color:#E4007D' %><br />
    <%= f.text_field :last_name, class: "form-control", style: "color:black", autofocus: false %>
    <%= f.hidden_field :balance, class: "form-control", style: "color:black", value: 0 , autofocus: false %>
  </div> <br>
            
       <div class="field">
    <%= f.label :password_confirmation, :style => 'color:#E4007D' %><br />
    <%= f.password_field :password_confirmation, class: "form-control", style: "color:black", autocomplete: "off" %>
  </div>


<div class="field" style="display:none">
    <%= f.label :role_id %><br />
    <%= f.hidden_field :role_id, value:2, class: "form-group",style: "color:black",autofocus: false %>
  </div> 
     
        </div>
        <br><br>
         <div class="actions">
             <%= f.submit t('sign_up_now') ,class: " btn", style: "color:white; margin-top:3%; width:100%; background-color:#E4007D;" %>
        </div>
        <% end %>
        <br> <br>
        
    
    </div>
    <div class="col-md-3"></div>
</div>

