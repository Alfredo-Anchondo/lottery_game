<div class="row">
    <br>
    <div class="col-md-3"></div>
    <div class="col-md-6" style="border:1px solid black; background-color:white; color:white; text-align:center">
         <h2 style="color:black; font-weight:900;"><%= t('make_account') %></h2> <br>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
        <div class="col-md-6">
               
  <div class="field">
      <%= f.label :username, :style => 'color:#E4007D' %><br />
      <%= f.text_field :username, class: "form-control", style: "color:black", autofocus: true, required: true %>
  </div> <br>

 <div class="field">
     <%= f.label :birthday, :style => 'color:#E4007D' %><br />
     <%= f.date_field :birthday, class: "form-control", style: "color:black", autofocus: true, required: true, onchange: 'validate_date()' %>
  </div> <br>            
            
<div class="field">
    <%= f.label :email, :style => 'color:#E4007D' %><br />
    <%= f.email_field :email, class: "form-control", style: "color:black", autofocus: false, required: true %>
  </div> <br>
  <div class="field">
    <%= f.label :password, :style => 'color:#E4007D' %><br />
    <%= f.password_field :password, class: "form-control",style: "color:black", autocomplete: "off", required: true %>
  </div>

        </div>
        <div class="col-md-6">
            <div class="field">
    <%= f.label :name, :style => 'color:#E4007D' %><br />
    <%= f.text_field :name, class: "form-control", style: "color:black", autofocus: false, required: true %>
  </div> <br>

<div class="field">
    <%= f.label :gender, :style => 'color:#E4007D' %><br />
    <%= f.text_field :gender, class: "form-control", style: "color:black", autofocus: false, required: true %>
  </div>     <br>       
            
<div class="field">
    <%= f.label :last_name, :style => 'color:#E4007D' %><br />
    <%= f.text_field :last_name, class: "form-control", style: "color:black", autofocus: false %>
    <%= f.hidden_field :balance, class: "form-control", style: "color:black", value: 0 , autofocus: false, required: true %>
  </div> <br>
            
       <div class="field">
    <%= f.label :password_confirmation, :style => 'color:#E4007D' %><br />
    <%= f.password_field :password_confirmation, class: "form-control", style: "color:black", autocomplete: "off", required: true %>
  </div>


<div class="field" style="display:none">
    <%= f.label :role_id %><br />
    <%= f.hidden_field :role_id, value:2, class: "form-group",style: "color:black",autofocus: false %>
  </div> 
     
        </div>
        <br><br>
         <div class="actions">
             <%= f.submit t('sign_up_now') ,class: " btn", style: "color:white; margin-top:3%; width:100%; background-color:#E4007D;" %>
        </div>
        <% end %>
        <br> <br>
        
    
    </div>
    <div class="col-md-3"></div>
</div>


<script>
    function validate_date(){
        var my_date = Date.parse($('#user_birthday').val());
        alert(my_date);
     var day = my_date.getDate();
    var month = my_date.getMonth();
    var year = my_date.getFullYear();
        alert(day + " " + month + " " + year);
    var age = 18;
    var mydate = new Date();
    mydate.setFullYear(year, month-1, day);

    var currdate = new Date();
   var setDate = new Date();        
   setDate.setFullYear(mydate.getFullYear() + age,month-1, day);

         if ((currdate - setDate) > 0){
    // you are above 18
        alert("above 18");
    }else{
    alert("below 18");
    }
    }
</script>
