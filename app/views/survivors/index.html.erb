<div class="row">
  <!-- begin col-12 -->
  <div class="col-md-12">
    <!-- begin panel -->
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="row">
          <h3 style="margin-left:15px"><%= t("activerecord.models.survivors") %></h3>
        </div>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table id="data-table" class="table table-bordered table-hover table-striped nowrap" width="100%">
            <thead>
              <tr>
                                  <th><%= t("activerecord.attributes.survivor.name") %></th>
                                  <th><%= t("activerecord.attributes.survivor.description") %></th>
                                  <th><%= t("activerecord.attributes.survivor.price") %></th>
                                  <th><%= t("activerecord.attributes.survivor.initial_balance") %></th>
                                  <th><%= t("activerecord.attributes.survivor.rebuy_quantity") %></th>
                                  <th><%= t("activerecord.attributes.survivor.percentage") %></th>
                                  <th><%= t("activerecord.attributes.survivor.user_id") %></th>
                                <th style="width: 155px"></th>
              </tr>
            </thead>

            <tbody>
              <% @survivors.each do |survivor| %>
              <tr>
                                  <td><%= survivor.name %></td>
                                  <td><%= survivor.description %></td>
                                  <td><%= number_to_currency(survivor.price) %></td>
                                  <td><%= number_to_currency(survivor.initial_balance) %></td>
                                  <td><%= survivor.rebuy_quantity %></td>
                                  <td><%= survivor.percentage %></td>
                                  <td><%= User.find(survivor.user_id).username %></td>
                                <td class="action-link">
                  <% if can? :show,survivor %>
                    <%= link_to survivor, :class => "btn btn-default", :title => t("actions.show") do %>
                      <i class="fa fa-eye"></i>
                    <% end %>
                  <% end %>
                  <% if can? :edit, survivor %>
                    <%= link_to edit_survivor_path(survivor), :class => "btn btn-info", :title => t("actions.edit") do %>
                      <i class="fa fa-pencil"></i>
                    <% end %>
                  <% end %>
                  <% if can? :delete, survivor %>
                    <%= link_to survivor, :method => :delete, :data => { :confirm => t("are_you_sure?", model: t("activerecord.models.survivor").downcase) }, :class => "btn btn-danger", :title => t("actions.delete") do %>
                      <i class="fa fa-trash"></i>
                    <% end %>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="text-center">

        </div>
      </div>
      <!-- end panel-body -->
    </div>
    <!-- end panel -->
  </div>
  <!-- end col-12 -->
</div>
<!-- end row -->

<!-- begin row -->
<div class="row">
  <div class="col-md-12">
    <% if can? :new, Survivor  %>
      <%= link_to new_survivor_path, :class => "btn btn-default" do %>
        <i class="icon-plus-sign-alt"></i>
        <%= t("actions.new") %>
      <% end %>
    <% end %>
  </div>
  <!-- end col-12 -->
</div>
<!-- end row -->




<script>
       var current_language = $("#current_language").val();
       var languaje;
    
    if(current_language == "en"){
    languaje= "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/English.json"
}else{
    languaje = "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
}
    
$('#data-table').DataTable({
    responsive: true,
    order: [0,"desc"],
     "language": {
            "url": languaje
        }
});
</script>