<!-- begin row -->
<div class="row">
  <!-- begin col-md-12 -->
  <div class="col-md-12">
    <div class="invoice">
      <div class="invoice-content">
        <div class="table-responsive">
              <h3 class="header-show"><%= t("details_of", model: t("activerecord.models.user_lottery").downcase) %></h3> <br>
            <div class="row">
                 <div class="col-md-4">
                    <h4 class="property-show">   <%= t("activerecord.attributes.user_lottery.user") %>:</h4><br />
                     <h5 class="property-text"><%= @user_lottery.user.name %></h5> <hr>
                </div>
                 <div class="col-md-4">
                   <h4 class="property-show"><%= t("activerecord.attributes.user_lottery.lottery") %>:</h4> <br />
                     <h5 class="property-text"><%= @user_lottery.lottery.game.team.name + " vs " + @user_lottery.lottery.game.team2.name %></h5> <hr>
                </div>
                 <div class="col-md-4">
                <h4 class="property-show"> <%= t("activerecord.attributes.user_lottery.status") %>: </h4> <br />
                    <h5 class="property-text"><%= @user_lottery.status %></h5> <hr>
                </div>
            </div>
            <div class="row">
                 <div class="col-md-4">
                <h4 class="property-show"> <%= t("activerecord.attributes.user_lottery.ticket_number") %>: </h4> <br />
                    <h5 class="property-text"><%= @user_lottery.ticket_number %></h5> <hr>
                </div>
                 <div class="col-md-4">
                 <h4 class="property-show">   <%= t("activerecord.attributes.user_lottery.purchase_date") %>:</h4> <br />
                    <h5 class="property-text"><%= @user_lottery.purchase_date %></h5> <hr>
                </div>
                 <div class="col-md-4">
                 <h4 class="property-show"><%= t("activerecord.attributes.user_lottery.created_at") %>:</h4> <br />
                    <h5 class="property-text"><%= @user_lottery.created_at %></h5> <hr>
                </div>
            </div>
          
        </div>
      </div>
      <div class="invoice-footer text-muted"></div>
    </div>
  </div>
  <!-- end col-md-12 -->
</div>
<!-- end row -->

<!-- begin row -->
<div class="row">
  <div class="col-md-12">
    <% if can? :edit, @user_lottery %>
      <%= link_to edit_user_lottery_path(@user_lottery), :class => "btn btn-default" do %>
        <i class="icon-pencil"></i>
        <%= t("actions.edit") %>
      <% end %>
    <% end %>
    <% if can? :delete, @user_lottery %>
      <%= link_to @user_lottery, method: :delete, data: { confirm: t("are_you_sure?", model: t("activerecord.models.user_lottery").downcase) }, :class => "btn btn-danger" do %>
        <i class="icon-trash"></i>
        <%= t("actions.delete") %>
      <% end %>
    <% end %>
    <% if can? :index, UserLottery  %>
      <%= link_to user_lotteries_path, :class => "btn btn-default" do %>
        <i class="icon-chevron-left"></i>
        <%= t("actions.back") %>
      <% end %>
    <% end %>
  </div>
  <!-- end col-12 -->
</div>
<!-- end row -->