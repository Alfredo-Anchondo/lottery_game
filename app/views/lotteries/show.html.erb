<!-- begin row -->
<div class="row">
  <!-- begin col-md-12 -->
  <div class="col-md-12">
    <div class="invoice">
      <div class="invoice-content">
        <div class="table-responsive">
             <h3 class="header-show"><%= t("details_of", model: t("activerecord.models.lottery").downcase) %></h3>
            <br>
            <div class="row">
            <div class="col-md-3">
                 <h4 class="property-show"> <%= t("activerecord.attributes.lottery.initial_balance") %>:</h4> <br />
                    <h5 class="property-text"><%= @lottery.initial_balance %></h5> <hr>
                </div>
                 <div class="col-md-3">
                 <h4 class="property-show"><%= t("activerecord.attributes.lottery.rules") %>: </h4> <br />
                    <h5 class="property-text"><%= @lottery.rules %></h5> <hr>
                </div>
                 <div class="col-md-3">
               <h4 class="property-show">  <%= t("activerecord.attributes.lottery.description") %>: </h4> <br />
                    <h5 class="property-text"><%= @lottery.description %></h5> <hr>
                </div>
                 <div class="col-md-3">
                     <h4 class="property-show"> <%= t("activerecord.attributes.lottery.game") %>: </h4> <br />
                    <h5 class="property-text"><%= @lottery.game.team.name + " vs " + @lottery.game.team2.name %></h5> <hr>
                </div>
            </div>
              <div class="row">
            <div class="col-md-3">
                   <h4 class="property-show">  <%= t("activerecord.attributes.lottery.winner_number") %>: </h4> <br />
                    <h5 class="property-text"><%= @lottery.winner_number %></h5> <hr>
                  </div>
                 <div class="col-md-3">
                      <h4 class="property-show"><%= t("activerecord.attributes.lottery.initial_number") %>: </h4> <br />
                    <h5 class="property-text"><%= @lottery.initial_number %></h5><hr>
                      </div> 
                 <div class="col-md-3">
                   <h4 class="property-show">  <%= t("activerecord.attributes.lottery.final_number") %>: </h4> <br />
                    <h5 class="property-text"><%= @lottery.final_number %></h5><hr>
                  </div>
                 <div class="col-md-3">
                    <h4 class="property-show">  <%= t("activerecord.attributes.lottery.price") %>:</h4> <br />
                    <h5 class="property-text">$ <%= @lottery.price %></h5> <hr>
                      </div>
            </div>
            <div class="row">
            <div class="col-md-3">
               <h4 class="property-show"> <%= t("activerecord.attributes.lottery.created_at") %>: </h4> <br />
                    <h5 class="property-text"><%= @lottery.created_at %></h5> <hr>
                </div>
            </div>
          
        </div>
      </div>
      <div class="invoice-footer text-muted"></div>
    </div>
  </div>
  <!-- end col-md-12 -->
</div>
<!-- end row -->

<!-- begin row -->
<div class="row">
  <div class="col-md-12">
    <% if can? :edit, @lottery %>
      <%= link_to edit_lottery_path(@lottery), :class => "btn btn-default" do %>
        <i class="icon-pencil"></i>
        <%= t("actions.edit") %>
      <% end %>
    <% end %>
    <% if can? :delete, @lottery %>
      <%= link_to @lottery, method: :delete, data: { confirm: t("are_you_sure?", model: t("activerecord.models.lottery").downcase) }, :class => "btn btn-danger" do %>
        <i class="icon-trash"></i>
        <%= t("actions.delete") %>
      <% end %>
    <% end %>
    <% if can? :index, Lottery  %>
      <%= link_to lotteries_path, :class => "btn btn-default" do %>
        <i class="icon-chevron-left"></i>
        <%= t("actions.back") %>
      <% end %>
    <% end %>
  </div>
  <!-- end col-12 -->
</div>
<!-- end row -->