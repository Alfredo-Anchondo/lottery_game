<!-- begin row -->
<div class="row">
  <!-- begin col-md-12 -->
  <div class="col-md-12">
    <div class="invoice">
      <div class="invoice-content">
        <div class="table-responsive">
          <div class="row">
			<div class="col-md-4">
				<h4><%= t("activerecord.attributes.question.title") %>: </h4>
				<h5><%= @question.title %></h5>
			  </div>
			  <div class="col-md-4">
				  <h4><%= t("activerecord.attributes.question.description") %>: </h4>
				  <h5><%= @question.description %></h5>
			  </div>
			  <div class="col-md-4">
			   <h4><%= t("activerecord.attributes.question.created_at") %>: </h4>
                    <h5><%= @question.created_at %></h5>
			  </div>
			</div>
                   
                 
        </div>
      </div>
      <div class="invoice-footer text-muted"></div>
    </div>
  </div>
  <!-- end col-md-12 -->
</div>
<!-- end row -->
<br>
<!-- begin row -->
<div class="row">
  <div class="col-md-12">
    <% if can? :edit, @question %>
      <%= link_to edit_question_path(@question), :class => "btn btn-default" do %>
        <i class="icon-pencil"></i>
        <%= t("actions.edit") %>
      <% end %>
    <% end %>
    <% if can? :delete, @question %>
      <%= link_to @question, method: :delete, data: { confirm: t("are_you_sure?", model: t("activerecord.models.question").downcase) }, :class => "btn btn-danger" do %>
        <i class="icon-trash"></i>
        <%= t("actions.delete") %>
      <% end %>
    <% end %>
    <% if can? :index, Question  %>
      <%= link_to questions_path, :class => "btn btn-default" do %>
        <i class="icon-chevron-left"></i>
        <%= t("actions.back") %>
      <% end %>
    <% end %>
  </div>
  <!-- end col-12 -->
</div>
<!-- end row -->