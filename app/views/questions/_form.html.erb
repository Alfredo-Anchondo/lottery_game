<%= form_for(@question, :html => { :class => "form-horizontal" }) do |f| %>
<% if @question.errors.any? %>
<div id="error_explanation">
  <% if @question.errors.count == 1 %>
  <h5><%= t("activerecord.errors.template.header.one", model: t("activerecord.models.question")) %></h5>
  <% else %>
  <h5><%= t("activerecord.errors.template.header.other", model: t("activerecord.models.question"), :count => @question.errors.count) %></h5>
  <% end %>
  <ul>
    <% @question.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<!-- begin col-md-6 -->
<div class="col-md-6">
	<div class="form-group">
		<%= f.label :title, :class => "col-md-3 requi" %>
          <div class="col-md-9">
			  <%= f.text_field :title, :class => "form-control" ,:required => "required"%>
          </div>
        </div>
	<div class="form-group">
		<%= f.label :description, :class => "col-md-3 requi" %>
          <div class="col-md-9">
			  <%= f.text_field :description, :class => "form-control" ,:required => "required"%>
          </div>
        </div>
  </div>
<!-- end col-md-6 -->

<div class="col-md-12">
  <div class="form-group">
    <div class="col-md-12 text-center">
      <%= f.button :class => "submit btn btn-success", :data => { :disable_with => t("actions.saving") } do %>
      <i class='icon-ok'></i>
      <%= t("actions.save") %>
      <% end %>
    </div>
  </div>
</div>
<% end %>