<!DOCTYPE html>
<html>
<head>
  <title>DonBillete</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <%= stylesheet_link_tag  'application', media: 'all'%>
  <%#= javascript_include_tag 'application', 'data-turbolinks-track' => true %> 
    <%= javascript_include_tag 'application'%> 
  <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.0.2/css/responsive.bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/responsive/2.0.2/js/dataTables.responsive.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/responsive/2.0.2/js/responsive.bootstrap.min.js" type="text/javascript"></script>
  
</head>
<body>
       <% if signed_in? %>
    <% if current_user.role.is_admin? %>
    <%= render 'layouts/admin_nav' %>
    <% else %>
    <%= render 'layouts/client_nav' %>
    <% end %>
    <% else %>
      <%= render 'layouts/client_nav' %>
    <% end %>
    
    

        
    
    <p style="text-align:center; color:white" class="notice alert alert-success alert">
         <%= notice %> <%= alert %>
    </p>
     <input style="display:none" id="current_language" value="<%= current_user %>">
 
       <% if signed_in? %>
    <% if current_user.role.is_admin? %>
       <div class="" style="margin-top:-3%; width:100%"  id="main-con"><%= yield %></div>
    <% else %>
    <div class="" style="margin-top:-4%; width:100%"  id="main-con"><%= yield %></div>
    <% end %>
    <% else %>
    <div class="" style="margin-top:0%; width:100%"  id="main-con"><%= yield %></div>
    <% end %>
       
    
   
 
   
</body>
</html>
