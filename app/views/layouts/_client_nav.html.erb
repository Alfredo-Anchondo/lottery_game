<div class="row" id="banner" >
 <div style="margin-left:6%; height:80px;">
    <div class="col-md-5 col-xs-12"> <a href="/"><img id="logo-image" src="/assets/logo_donbillete.png"></a></div>
    <div class="col-md-7" id="responsive-cellphone" style="margin-top:1%">
           <% if signed_in? %>
             <%=link_to current_user do %>
        <div class="col-md-12 col-xs-12 hide-phone">
            <% if current_user.photo.present? %>
            <div class="col-md-2">
               <h4><img id="user_image" class="pull-right" width="100px" height="100px" style="border-radius:150px; border:2px solid #E4007D" src="<%= current_user.photo %>"></h4>
            </div>
            <% end %>
            <div class="col-md-10" style="margin-top:3%;background-color: rgb(162, 160, 160); color: white;">
                     <h4 style="color:white"> <%= t('welcome') %>: <span style="text-transform: uppercase;"><%= current_user.username %></span>
                 <span style="margin-left:5%;" id="current_bal"> <%= t('current_user_balance') %>: <span style="text-transform: uppercase;">$<%= current_user.balance %></span></span>  
                </h4>
                    
                <h4 style="color:white"><%= t('current_date') %> 
                    <span id="clock"></span> <span style="margin-left:5%"> <%= t('change_type') %> <span id="change_type"></span>  </span> </h4>
                
                   <% if signed_in? %>
                <%= link_to destroy_user_session_path, :method => :delete, :style => "color:white" do %>
           <h4> <i class="fa fa-sign-out"></i><%= t('logout') %> </h4>
          <% end %>
               <% end %>
                
                
            </div>
   
        </div>
             <% end %> 
        <% else %>
        <div class="row">
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => "form-inline") do |f| %>
            <div class="col-md-4">
             <div class="field form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, :style => "color:black", :class => "form-control", autofocus: true %>
                 <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
        <%= f.label t('remember_me') %>
    </div>
  <% end -%>
              </div>
            </div>
            
            <div class="col-md-4">
            <div class="field form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, :style => "color:black",  :class => "form-control",  autocomplete: "off" %>
                 <div class="actions" style="color:black">
      <%= f.submit t('log_in'), :class => "form-group btn", :style => "background-color:#ab005c; margin-top:2%; width:100%; color: white;
    font-weight: 900;" %> <br>
        
      <div id="status">
</div>
  </div>
  </div>
            </div>
            
            <div class="col-md-4">
               <%= render "devise/shared/links" %>
            </div>
 

       
  
       


       
       
  
<% end %>
        </div>
        <% end %>
        
        <% if signed_in? %>
        <div class="col-md-2">
        <!-- START Language list-->
                      
                        <!-- END Language list    -->
            <% end %>
        </div>
        
     </div> 
    </div>
</div>

