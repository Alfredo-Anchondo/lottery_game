<%= form_for(@survivor_user, :html => { :class => "form-horizontal" }) do |f| %>
<% if @survivor_user.errors.any? %>
<div id="error_explanation">
  <% if @survivor_user.errors.count == 1 %>
  <h5><%= t("activerecord.errors.template.header.one", model: t("activerecord.models.survivor_user")) %></h5>
  <% else %>
  <h5><%= t("activerecord.errors.template.header.other", model: t("activerecord.models.survivor_user"), :count => @survivor_user.errors.count) %></h5>
  <% end %>
  <ul>
    <% @survivor_user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<!-- begin col-md-6 -->
<div class="col-md-6">
              <div class="form-group">
          <%= f.label :survivor_week_survivor, :class => "col-md-3" %>
          <div class="col-md-9">
            <%= f.collection_select(:survivor_week_survivor_id, SurvivorWeekSurvivor.all, :id, :select_display, { :include_blank => false, :prompt => true }, required: true, :class => "form-control") %>
          </div>
        </div>
                  <div class="form-group">
          <%= f.label :team, :class => "col-md-3" %>
          <div class="col-md-9">
            <%= f.collection_select(:team_id, Team.all, :id, :select_display, { :include_blank => false, :prompt => true },	 :class => "form-control") %>
          </div>
        </div>
                  <div class="form-group">
          <%= f.label :purchase_date, :class => "col-md-3" %>
          <div class="col-md-9">
            <%= f.datetime_select :purchase_date, :class => "form-control" %>
          </div>
        </div>
                 <div class="form-group">
          <%= f.label :survivor_user_id, :class => "col-md-3" %>
          <div class="col-md-9">
            <%= f.text_field :survivor_user_id, :class => "form-control" %>
          </div>
        </div>
                  <div class="form-group">
          <%= f.label :user, :class => "col-md-3" %>
          <div class="col-md-9">
            <%= f.collection_select(:user_id, User.clients, :id, :select_display, { :include_blank => false, :prompt => true }, required: true, :class => "form-control") %>
          </div>
        </div>
        </div>
      </div>
<!-- end col-md-6 -->

<div class="col-md-12">
  <div class="form-group">
    <div class="col-md-12 text-center">
      <%= f.button :class => "submit btn btn-success", :data => { :disable_with => t("actions.saving") } do %>
      <i class='icon-ok'></i>
      <%= t("actions.save") %>
      <% end %>
    </div>
  </div>
</div>
<% end %>
