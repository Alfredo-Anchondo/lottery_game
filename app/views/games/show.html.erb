<!-- begin row -->
<div class="row">
  <!-- begin col-md-12 -->
  <div class="col-md-12">
    <div class="invoice">
      <div class="invoice-content">
        <div class="table-responsive">
             <h3 class="header-show"><%= t("details_of", model: t("activerecord.models.game").downcase) %></h3>
            
            <div class="row">
            <div class="col-md-3">
                <h4 class="property-show"> <%= t("activerecord.attributes.game.team") %>: </h4> <br />
                <h5 class="property-text"><%= @game.team.name %></h5> <hr>
                </div>
            <div class="col-md-3">
               <h4 class="property-show">   <%= t("activerecord.attributes.game.game_date") %>: </h4> <br />
                    <h5 class="property-text"><%= @game.game_date %></h5> <hr>
                </div>
            <div class="col-md-3">
               <h4 class="property-show">  <%= t("activerecord.attributes.game.description") %>: </h4> <br />
               <h5 class="property-text"><%= @game.description %></h5> <hr>
                </div>
            <div class="col-md-3">
                <h4 class="property-show">  <%= t("activerecord.attributes.game.local_score") %>:</h4> <br />
                    <h5 class="property-text"><%= @game.local_score %></h5> <hr>
                </div>
                
            </div>
            <div class="row">
            <div class="col-md-3">
                 <h4 class="property-show"> <%= t("activerecord.attributes.game.visit_score") %>: </h4> <br />
                    <h5 class="property-text"><%= @game.visit_score %></h5> <hr>
                </div>
            <div class="col-md-3">
                <h4 class="property-show">  <%= t("activerecord.attributes.game.team2_id") %>: </h4><br />
                <h5 class="property-text"><%= @game.team2.name %></h5> <hr>
                </div>
            <div class="col-md-3">
                  <h4 class="property-show">  <%= t("activerecord.attributes.game.created_at") %>: </h4> <br />
                    <h5 class="property-text"><%= @game.created_at %></h5>
                </div>
            </div>
            
          
        </div>
      </div>
      <div class="invoice-footer text-muted"></div>
    </div>
  </div>
  <!-- end col-md-12 -->
</div>
<!-- end row -->

<!-- begin row -->
<div class="row">
  <div class="col-md-12">
    <% if can? :edit, @game %>
      <%= link_to edit_game_path(@game), :class => "btn btn-default" do %>
        <i class="icon-pencil"></i>
        <%= t("actions.edit") %>
      <% end %>
    <% end %>
    <% if can? :delete, @game %>
      <%= link_to @game, method: :delete, data: { confirm: t("are_you_sure?", model: t("activerecord.models.game").downcase) }, :class => "btn btn-danger" do %>
        <i class="icon-trash"></i>
        <%= t("actions.delete") %>
      <% end %>
    <% end %>
    <% if can? :index, Game  %>
      <%= link_to games_path, :class => "btn btn-default" do %>
        <i class="icon-chevron-left"></i>
        <%= t("actions.back") %>
      <% end %>
    <% end %>
  </div>
  <!-- end col-12 -->
</div>
<!-- end row -->