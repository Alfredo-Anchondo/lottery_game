<%= form_for(@question_enrachate, :html => { :class => "form-horizontal" }) do |f| %>
<% if @question_enrachate.errors.any? %>
<div id="error_explanation">
  <% if @question_enrachate.errors.count == 1 %>
  <h5><%= t("activerecord.errors.template.header.one", model: t("activerecord.models.question_enrachate")) %></h5>
  <% else %>
  <h5><%= t("activerecord.errors.template.header.other", model: t("activerecord.models.question_enrachate"), :count => @question_enrachate.errors.count) %></h5>
  <% end %>
  <ul>
    <% @question_enrachate.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<!-- begin col-md-6 -->
<div class="col-md-12">

     <div class="form-group">
          <%= f.label :program_date, :class => "col-md-2" %>
          <div class="col-md-10">
            <%= f.datetime_select :program_date, :class => "form-control" %>
          </div>
        </div>

              <div class="form-group">
          <%= f.label :title, :class => "col-md-2" %>
          <div class="col-md-10">
            <%= f.text_field :title, :class => "form-control" %>
          </div>
        </div>
                  <div class="form-group">
          <%= f.label :answer1, :class => "col-md-2" %>
          <div class="col-md-10">
            <%= f.text_field :answer1, :class => "form-control" %>
          </div>
        </div>
                  <div class="form-group">
          <%= f.label :answer2, :class => "col-md-2" %>
          <div class="col-md-10">
            <%= f.text_field :answer2, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
<%= f.label :correct_answer, :class => "col-md-2" %>
<div class="col-md-10">
  <%= f.text_field :correct_answer, :class => "form-control" %>
</div>
</div>

      </div>
<!-- end col-md-6 -->

<div class="col-md-12">
  <div class="form-group">
    <div class="col-md-12 text-center">
      <%= f.button :class => "submit btn btn-success", :data => { :disable_with => t("actions.saving") } do %>
      <i class='icon-ok'></i>
      <%= t("actions.save") %>
      <% end %>
    </div>
  </div>
</div>
<% end %>
