<!-- begin row -->
<div class="row">
  <!-- begin col-md-12 -->
  <div class="col-md-12">
    <div class="invoice">
      <div class="invoice-content">
        <div class="table-responsive">
             <h3 class="header-show"><%= t("details_of", model: t("activerecord.models.role").downcase) %></h3>
            <br>
            <div class="row">
            <div class="col-md-4">
                   <h4 class="property-show"> <%= t("activerecord.attributes.role.name") %>: </h4> <br />
                    <h5 class="property-text"><%= @role.name %></h5> <hr>
                </div>
             <div class="col-md-4">
                  <h4 class="property-show"> <%= t("activerecord.attributes.role.description") %>: </h4> <br />
                    <h5 class="property-text"><%= @role.description %></h5> <hr>
                </div>
            <div class="col-md-4">
                  <h4 class="property-show"> <%= t("activerecord.attributes.role.created_at") %>: </h4> <br />
                    <h5 class="property-text"><%= @role.created_at %></h5> <hr>
                    
                </div>
            </div>
               <div class="row">
            <div class="col-md-4">
                 <h4 class="property-show"> <%= t("activerecord.attributes.role.is_admin") %>: </h4> <br />
                    <h5 class="property-text"><%= @role.is_admin %></h5> <hr>
                   </div> 
            <div class="col-md-4">
                        <h4 class="property-show">  <%= t("activerecord.attributes.role.is_client") %>:</h4> <br />
                    <h5 class="property-text"><%= @role.is_client %></h5> <hr>
                   </div>
            </div>
          
        </div>
      </div>
      <div class="invoice-footer text-muted"></div>
    </div>
  </div>
  <!-- end col-md-12 -->
</div>
<!-- end row -->

<!-- begin row -->
<div class="row">
  <div class="col-md-12">
    <% if can? :edit, @role %>
      <%= link_to edit_role_path(@role), :class => "btn btn-default" do %>
        <i class="icon-pencil"></i>
        <%= t("actions.edit") %>
      <% end %>
    <% end %>
    <% if can? :delete, @role %>
      <%= link_to @role, method: :delete, data: { confirm: t("are_you_sure?", model: t("activerecord.models.role").downcase) }, :class => "btn btn-danger" do %>
        <i class="icon-trash"></i>
        <%= t("actions.delete") %>
      <% end %>
    <% end %>
    <% if can? :index, Role  %>
      <%= link_to roles_path, :class => "btn btn-default" do %>
        <i class="icon-chevron-left"></i>
        <%= t("actions.back") %>
      <% end %>
    <% end %>
  </div>
  <!-- end col-12 -->
</div>
<!-- end row -->