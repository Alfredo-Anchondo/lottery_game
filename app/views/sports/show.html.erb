<!-- begin row -->
<div class="row">
  <!-- begin col-md-12 -->
  <div class="col-md-12">
    <div class="invoice">
      <div class="invoice-content">
        <div class="table-responsive">
              <h3 class="header-show"><%= t("details_of", model: t("activerecord.models.sport").downcase) %></h3>
               <br>
            <div class="row">
        
                <div class="col-md-4">
               <h4 class="property-show"> <%= t("activerecord.attributes.sport.name") %>:</h4>  
                   <h5 class="property-text"><%= @sport.name %></h5><hr />
                </div>
                <div class="col-md-4">
                <h4 class="property-show"><%= t("activerecord.attributes.sport.description") %>: </h4> 
                    <h5 class="property-text"><%= @sport.description %></h5><hr />
                </div>
                <div class="col-md-4">
                 <h4 class="property-show"><%= t("activerecord.attributes.sport.logo") %>:</h4> 
                    <small><img width="200" src="<%= @sport.logo %>"></small> <hr />
                </div>  
            </div>
            
        </div>
      </div>
      <div class="invoice-footer text-muted"></div>
    </div>
  </div>
  <!-- end col-md-12 -->
</div>
<!-- end row -->

<!-- begin row -->
<div class="row">
  <div class="col-md-12">
    <% if can? :edit, @sport %>
      <%= link_to edit_sport_path(@sport), :class => "btn btn-default" do %>
        <i class="icon-pencil"></i>
        <%= t("actions.edit") %>
      <% end %>
    <% end %>
    <% if can? :delete, @sport %>
      <%= link_to @sport, method: :delete, data: { confirm: t("are_you_sure?", model: t("activerecord.models.sport").downcase) }, :class => "btn btn-danger" do %>
        <i class="icon-trash"></i>
        <%= t("actions.delete") %>
      <% end %>
    <% end %>
    <% if can? :index, Sport  %>
      <%= link_to sports_path, :class => "btn btn-default" do %>
        <i class="icon-chevron-left"></i>
        <%= t("actions.back") %>
      <% end %>
    <% end %>
  </div>
  <!-- end col-12 -->
</div>
<!-- end row -->